mixin event(data)
  article.event
    section.event__section.event__section--heading
      h4.event__title!= data.title
      if data.time
      .event__time!= data.time
    section.event__section.event__section--content
      if data.emoji
        .event__emoji!= data.emoji
      if data.text
        .event__text!= data.text
      if data.address
        .event__address!= data.address
